<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".view.activity.MeActivity">

    <EditText
        android:id="@+id/et_tel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/shape_lightgray_stroke_bg"
        android:hint="请输入手机号码"
        android:textSize="@dimen/text_size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_lightgray_stroke_bg"
            android:hint="验证码"
            android:textSize="@dimen/text_size_16" />

        <Button
            android:id="@+id/btn_get_code"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_red_solid_btn"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/shape_lightgray_stroke_bg"
        android:hint="请输入真实姓名"
        android:textSize="@dimen/text_size_16" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/shape_lightgray_stroke_bg"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textSize="@dimen/text_size_16" />


    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_red_solid_btn"
        android:text="注 册"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/tv_go_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="right|bottom"
        android:text="已有账号，点击登录 》"
        android:textColor="@color/blue_m"
        android:textSize="@dimen/text_size_16" />

</LinearLayout>
