<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">
    <ImageView
        android:id="@+id/iv_food"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/sale_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/text_size_12"
                android:text="开奖进度："/>
            <TextView
                android:id="@+id/tv_sale_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/sale_title"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/text_sale_progress"/>
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="20sp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/sale_title"
                android:max="100"
                android:id="@+id/progressBar"/>
        </RelativeLayout>
        <Button
            android:layout_width="68dp"
            android:layout_height="38dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/shape_red_stroke_btn"
            android:textColor="@color/btn_duobao_color"
            android:textSize="@dimen/text_size_16"
            android:text="夺宝"/>

    </LinearLayout>
</LinearLayout>
